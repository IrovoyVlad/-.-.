<Window x:Class="WpfApp19Var.View.WindowUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp19Var.View"
        mc:Ignorable="d"
        Title="Ползователи" Height="450" Width="800">
    <StackPanel Background="#FFD8D8D8">
        <ListView x:Name="lvUser" Background="#FFD3CDCD">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Код" Width="50" DisplayMemberBinding="{Binding Id}" />
                        <GridViewColumn Header="Логин" Width="150"  DisplayMemberBinding="{Binding UserName}"/>
                        <GridViewColumn Header="Пароль" Width="100"  DisplayMemberBinding="{Binding Password}"/>
                        <GridViewColumn Header="Эл. почта" Width="120" DisplayMemberBinding="{Binding Email}"/>
                        <GridViewColumn Header="Статус" Width="120" DisplayMemberBinding="{Binding Status}"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Window>
